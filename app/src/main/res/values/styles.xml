<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyleBold32">
        <item name="android:textSize">@dimen/text_bold_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="textStyleMedium22">
        <item name="android:textSize">@dimen/text_medium_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="textStyleMedium16">
        <item name="android:textSize">@dimen/text_medium_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="textStyleRegular16">
        <item name="android:textSize">@dimen/text_regular_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="textStyleRegular12">
        <item name="android:textSize">@dimen/text_regular_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="toolbarTextStyle" parent="textStyleMedium22">
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="teamTextStyleMedium16">
        <item name="android:textAppearance">@style/textStyleMedium16</item>
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="filterTextAction">
        <item name="endIconDrawable">@drawable/arrow_forward_24px</item>
        <item name="endIconTint">?attr/mainTextColor</item>
        <item name="endIconMode">custom</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="filterEditTextAction">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textColorHint">?attr/mainTextColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="hintTextAppearance">@style/textStyleRegular12</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="cursorColor">@color/blue</item>
        <item name="endIconTint">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_3x</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_3x</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_3x</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_3x</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:inputType">number</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:textCursorDrawable">@drawable/custom_edit_text_cursor</item>
        <item name="android:textSelectHandle">@drawable/custom_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/custom_handle</item>
        <item name="android:textSelectHandleRight">@drawable/custom_handle</item>
    </style>

    <style name="withoutSalary">
        <item name="icon">@drawable/close_24px</item>
        <item name="iconGravity">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:drawablePadding">@dimen/margin_2x</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="acceptButton">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/margin_3x</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
    </style>

    <style name="resetButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MainBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?attr/mainBackgroundColor</item>
        <item name="itemTextColor">@color/bottom_navigation_menu_color</item>
        <item name="itemIconTint">@color/bottom_navigation_menu_color</item>
        <item name="itemActiveIndicatorStyle">?attr/secondIconColor</item>
        <item name="itemRippleColor">?attr/secondIconColor</item>
    </style>

    <style name="editTextSearchStyle" >
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColorHint">?attr/hintEditTextColor</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingVertical">@dimen/padding_4x</item>
        <item name="android:paddingHorizontal">@dimen/padding_4x</item>
        <item name="android:layout_marginVertical">@dimen/margin_2x</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_edit_text_cursor</item>
        <item name="android:textSelectHandle">@drawable/custom_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/custom_handle</item>
        <item name="android:textSelectHandleRight">@drawable/custom_handle</item>
    </style>

    <style name="textInputSearchStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="boxStrokeColor">?attr/mainBackgroundColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:textColorHint">?attr/hintEditTextColor</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:layout_marginVertical">@dimen/margin_2x</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="editTextSearchStyleForTextInput">
        <item name="android:textColorHint">?attr/hintEditTextColor</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_edit_text_cursor</item>
        <item name="android:textSelectHandle">@drawable/custom_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/custom_handle</item>
        <item name="android:textSelectHandleRight">@drawable/custom_handle</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewMessageStyle">
        <item name="android:background">@drawable/text_view_message_background</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:paddingVertical">@dimen/padding_1x</item>
        <item name="android:paddingHorizontal">@dimen/padding_3x</item>
        <item name="android:layout_marginVertical">@dimen/margin_3x</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="errorsTextStyle">
        <item name="android:textAppearance">@style/textStyleMedium22</item>
        <item name="android:layout_marginVertical">@dimen/margin_3x</item>
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="statusBarStyle">
        <item name="android:statusBarColor">?attr/mainTextColor</item>
    </style>
    <style name="ButtonChooseStyle" parent="textStyleMedium16">
        <item name="android:layout_marginBottom">@dimen/margin_6x</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_4x</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="workPlaceEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/hintEditTextColor</item>
        <item name="endIconTint">?attr/mainIconColor</item>
        <item name="hintTextAppearance">@style/workPlaceEditTextForHintStyle</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="workPlaceEditTextForHintStyle" parent="textStyleRegular12">
        <item name="hintTextColor">?attr/hintEditTextColor</item>
    </style>

    <style name="workPlaceButtonChooseStyle" parent="textStyleMedium16">
        <item name="android:layout_marginBottom">@dimen/margin_6x</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_4x</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:enabled">true</item>
    </style>

</resources>
